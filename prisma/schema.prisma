generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String   @id @default(uuid())
  blog      String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())

  @@map("blogs")
}

model User {
  id String @id @default(uuid())

  Blog Blog[]

  @@map("users")
}
